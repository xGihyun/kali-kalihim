---
import Layout from "@/components/layouts/layout.astro";
import RegisterForm from "./_components/register";
import NewSeasonForm from "./_components/new-season";
import { db } from "@/drizzle/db";
import { SectionsTable } from "@/drizzle/schema";

const sections = await db.select().from(SectionsTable)
---

<Layout title="Register">
  <RegisterForm client:load />
  <NewSeasonForm sections={sections} client:load />
</Layout>
